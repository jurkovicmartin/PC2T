package ProjectFilms;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Films {
	
	private List<String> films = new ArrayList<>();
	
	public void addFilm(String name, String director, int year) {
		Collections.addAll(films, name, director, Integer.toString(year));
	}
	
	public List<String> getFilms() {
		return films;
	}
	
	@Override
	public String toString() {
		return "Film: " + films.get(0) + ", Director: " + films.get(1)  + ", Year: " + year;
	}
	
