package ProjectFilms;

import java.util.ArrayList;
import java.util.List;

public abstract class Films {
	
	protected String name;
	protected String director;
	protected int year;
	public static List<Films> Films = new ArrayList<Films>();
	
	public void editName(String name, String newName) {
		for(Films film : Films) {
			if(film.name == name)
				film.name = newName;
		}
	}
	
	public void editDirector(String name, String newDirector) {
		for(Films film : Films) {
			if(film.name == name)
				film.director = newDirector;
		}
	}
	
	public void editYear(int year) {
		this.year = year;
	}
	
	
	abstract void addRating(int points);
	abstract void addRating(int points, String comment);
}
